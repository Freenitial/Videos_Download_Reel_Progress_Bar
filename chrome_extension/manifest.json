{
  "manifest_version": 3,
  "name": "Video Download - Reel ProgressBar - for Youtube Facebook Instagram TikTok X",
  "version": "1.1",
  "description": "Works only on Windows 10+ using Chrome browser",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",
        "https://*.instagram.com/*",
        "https://*.x.com/*",
        "https://*.youtube.com/*",
        "https://*.tiktok.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
